<Window x:Class="AppRobot.Views.Robot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppRobot.Views"
        mc:Ignorable="d"
        Title="Robot" Height="450" Width="800"        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        >
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/fond-icon.jpg"
                        Stretch="None"/>
        </Border.Background>
        <Border CornerRadius="10"
            BorderThickness="1"
                Opacity="0.95"
            >
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ROBOT"
                               Foreground="DarkGray"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Grid.Column="1"
                            Click="btnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose"
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Grid.Column="2"
                            Click="btnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DA34AE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>

                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Orientation="Vertical" Grid.Column="0" Margin="10,10,550,85" Grid.Row="1">
                    <TextBlock Text="Commandes : "
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="16"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="Appuyer sur ces touches sur votre &#x0a; clavier pour interragir avec le robot!"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="14"
                               Margin="0,10,0,10"/>
                    <TextBlock Text="W = Avancer" 
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="S = Reculer"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="A = Rotation vers la gauche"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="D = Rotation vers la droite"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="W + A = Avancer en tournant vers la gauche"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="W + D = Avancer en tournant vers la droite"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="S + A = Reculer en tournant vers la gauche"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="S + D = Reculer en tournant vers la droite"
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Pour faire jouer de la musique, appuyer une &#x0a; fois sur la barre ESPACE et pour arrêter &#x0a; réappuyer sur la barre ESPACE."
                               Foreground="White"
                               FontFamily="Montserrat"
                               FontSize="12"
                               Margin="0,0,0,10"/>
                </StackPanel>

                <!--Boutons de déplacement-->
                <Canvas Width="300" Height="300" Margin="249,44,249,74" Grid.Row="1">

                    <Button x:Name="btnForward" Foreground="White" Content="W" Canvas.Left="110" Canvas.Top="10" Click="btnForward_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#462AD8" Stroke="#28AEED" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z"/>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnRotationRight" Content="D" Foreground="White" Canvas.Left="210" Canvas.Top="110" Click="btnRotationRight_Click" >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#462AD8" Stroke="#28AEED" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="90"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnBackward" Content="S" Foreground="White" Canvas.Left="110" Canvas.Top="210" Click="btnBackward_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#462AD8" Stroke="#28AEED" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="180"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnRotationLeft" Content="A" Foreground="White" Canvas.Left="10" Canvas.Top="110" Click="btnRotationLeft_Click" >
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#462AD8" Stroke="#28AEED" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="270"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <Button x:Name="btnForwardRight" Content="W + D" Foreground="White" Canvas.Left="210" Canvas.Top="10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#DA34AE" Stroke="#F08AD4" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="45"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnForwardLeft" Content="W + A" Foreground="White" Canvas.Left="10" Canvas.Top="10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#DA34AE" Stroke="#F08AD4" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="315"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnBackwardRight" Content="S + D" Foreground="White" Canvas.Left="210" Canvas.Top="210">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#DA34AE" Stroke="#F08AD4" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="135"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnBackwardLeft" Content="S + A" Foreground="White" Canvas.Left="10" Canvas.Top="210">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Path Fill="#DA34AE" Stroke="#F08AD4" StrokeThickness="2"
                                          Data="M 0 80 L 80 80 L 40 0 Z" RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="225"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Path.RenderTransform>
                                    </Path>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnMusic" 
                            Content="Musique !"
                            Foreground="White"
                            Background="#DA34AE"
                            BorderBrush="#F08AD4"
                            BorderThickness="2"
                            Canvas.Left="110" 
                            Canvas.Top="135" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top" 
                            Width="80" Height="30">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="20" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Canvas>
                
            </Grid>
        </Border>
    </Border>
</Window>